{
  "name": "grand-prix-picks",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n v,c \"pnpm run dev:vite\" \"pnpm run dev:convex\"",
    "dev:vite": "dotenv -e .env.local -- sh -c \"NODE_OPTIONS='--import ./instrument.server.mjs' vite dev --port 3000\"",
    "dev:convex": "convex dev",
    "build": "vite build && cp instrument.server.mjs .output/server",
    "build:cf": "CF_PAGES=1 vite build",
    "preview": "vite preview",
    "preview:cf": "pnpm build:cf && wrangler pages dev .output/public",
    "deploy": "pnpm build:cf && wrangler pages deploy .output/public",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "knip": "knip",
    "start": "node --import ./.output/server/instrument.server.mjs .output/server/index.mjs"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.49.0",
    "@clerk/tanstack-react-start": "^0.28.1",
    "@sentry/cli": "^2.58.4",
    "@sentry/tanstackstart-react": "^10.22.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "convex": "^1.27.3",
    "dotenv-cli": "^11.0.0",
    "framer-motion": "^12.30.0",
    "lucide-react": "^0.561.0",
    "nitro": "npm:nitro-nightly@latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^6.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@sentry/vite-plugin": "^4.9.0",
    "@storybook/addon-vitest": "9.1.13",
    "@storybook/react": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-config": "^0.3.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^27.0.0",
    "knip": "^5.82.1",
    "prettier": "^3.5.3",
    "storybook": "^10.2.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "wrangler": "^4"
  }
}
