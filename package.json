{
  "name": "grand-prix-picks",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n v,c \"pnpm run dev:vite\" \"pnpm run dev:convex\"",
    "dev:vite": "dotenv -e .env.local -- sh -c \"NODE_OPTIONS='--import ./instrument.server.mjs' vite dev --port 3000\"",
    "dev:convex": "convex dev",
    "build": "vite build && cp instrument.server.mjs .output/server",
    "build:cf": "CF_PAGES=1 vite build",
    "preview": "vite preview",
    "preview:cf": "pnpm build:cf && wrangler pages dev .output/public",
    "deploy": "pnpm build:cf && wrangler pages deploy .output/public",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "knip": "knip",
    "start": "node --import ./.output/server/instrument.server.mjs .output/server/index.mjs"
  },
  "dependencies": {
    "@clerk/clerk-react": "5.60.0",
    "@clerk/tanstack-react-start": "0.29.1",
    "@clerk/themes": "^2.4.51",
    "@sentry/tanstackstart-react": "10.38.0",
    "@tailwindcss/vite": "4.1.18",
    "@tanstack/react-devtools": "0.9.4",
    "@tanstack/react-query": "5.90.20",
    "@tanstack/react-query-devtools": "5.91.3",
    "@tanstack/react-router": "1.158.1",
    "@tanstack/react-router-devtools": "1.158.1",
    "@tanstack/react-router-ssr-query": "1.158.1",
    "@tanstack/react-start": "1.158.3",
    "@tanstack/router-plugin": "1.158.1",
    "canvas-confetti": "^1.9.4",
    "convex": "1.31.7",
    "dotenv-cli": "11.0.0",
    "framer-motion": "12.33.0",
    "lucide-react": "0.563.0",
    "nitro": "npm:nitro-nightly@latest",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwindcss": "4.1.18",
    "vite-tsconfig-paths": "6.0.5"
  },
  "devDependencies": {
    "@playwright/test": "1.58.1",
    "@sentry/vite-plugin": "4.9.0",
    "@storybook/addon-vitest": "10.2.7",
    "@storybook/react": "10.2.7",
    "@storybook/react-vite": "10.2.7",
    "@tanstack/devtools-vite": "0.5.0",
    "@tanstack/eslint-config": "0.3.4",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.2",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "9.2.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jsdom": "28.0.0",
    "knip": "5.83.0",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "storybook": "10.2.7",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18",
    "wrangler": "4.63.0"
  }
}
